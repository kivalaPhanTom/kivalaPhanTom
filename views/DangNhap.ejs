			<form action="/users/login" method="post" class="beta-form-checkout wow zoomIn">
				
				<div class="formdangnhap">
					
					<div class="formdangnhap1">
						<h4 class="text-center h4DangNhap ">Đăng nhập</h4>
					
						<div class="form-block">
							<label for="email"class="email">Email</label>
							<input style="border-radius: 4px;border: 1px solid #ccc;"type="email" id="email" name="Email" required>
						</div>
						<div class="form-block form_pass">
							<label for="phone"class="password">Mật khẩu</label>
							<input style="border-radius: 4px;border: 1px solid #ccc;" type="password" id="phone" name="Password" required>
						</div>	

						<div class="login_or_forgotPass">
							<div class="row">
								<div class="col-6">
									<button class="btn btn-primary" type="submit ">Đăng nhập</button>
								</div>
								<div class="col-6">
									<a class="forgot_password"href="/users/forgot"><p>Quên mật khẩu ?</p></a>
								</div>
							</div>
						</div>
						
						<div  class="login_FB_GG mb-2"> <!--Khối đăng nhập bằng fb,gg-->
