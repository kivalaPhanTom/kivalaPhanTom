							<% include ./partials/messages %>
							<div class="row">
								<div class="col-6">
									<button style="background-color:#3B5998; color:white; width:100%;" class="fb white btn "><i class="fab fa-facebook-f white"></i> 
										<a class="login_social" style=" color:white; font-size:17px;"href="/auth/fb">Sign in with Facebook</a>
									</button>
								</div>
								<div class="col-6">
									<button  style="background-color:#EA4335; color:white; width:100%;" class="gg white btn "><i class="fab fa-google-plus-g white"></i>
										<a class="login_social" style=" color:white;  font-size:17px;" href="/auth/gg">Sign in with Google+</a>
									</button>
								</div>
							</div>	
						</div><!--End Khối đăng nhập bằng fb,gg-->
